---
const { id, mes, message } = Astro.props;
---
<dialog id="dialog"+{id} class="fixed left-0.5 top-0.5 -translate-x-0.5 -translate-y-0.5 w-full h-full justify-center items-center bg-black bg-opacity-40">
    <card class="flex flex-col gap-5 w-5/6 h-auto text-center justify-center items-center bg-black text-white border border-white rounded-xl p-5">
        <card-header class="flex text-2xl">
            <span>❤️</span> <h1 class="text-center decoration-white underline"> Mes { mes } </h1><span>❤️</span>
        </card-header>
        <p class="text-xl text-center">{ message }</p>
        <form method="dialog" class="flex justify-center">
            <button id="close" class="border-2 p-2 bg-gray-500 rounded-md" type="submit">Cerrar</button>
        </form>
    </card>    
</dialog>

<script>
    const dialog_close = document.querySelectorAll('#close');
    const modals = document.getElementsByTagName('dialog');

    for (let i = 0; i < modals.length; i++) {
        dialog_close[i].addEventListener('click', () => {
            modals[i].style.display = 'none';
        });
    }
</script>

<style>
    p {
        text-wrap: pretty;
    }
</style>